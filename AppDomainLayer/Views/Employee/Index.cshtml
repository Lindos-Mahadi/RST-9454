@model IEnumerable<AppDomainLayer.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Add New Employee</a>
</p>

<table class="table table-bordered table-hover table-striped">
    <thead class="bg-dark">
        <tr>
            @foreach (var property in typeof(Employee).GetProperties())
            {
                if (property.Name != "Id")
                {
                    <th class="text-light">
                        @Html.DisplayName(property.Name)
                    </th>
                    
                }
            }
            <th class="text-light">Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @foreach (var property in typeof(Employee).GetProperties())
                {
                    if (property.Name != "Id")
                    {
                        
                    <td>@property.GetValue(item)</td>
                    }
                }
                <td>
                     <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> ||
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> ||
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
